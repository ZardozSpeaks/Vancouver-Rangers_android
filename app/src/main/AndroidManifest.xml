<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.vancouverrangers">

    <application
        android:allowBackup="true"
        android:icon="@drawable/teamlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.vancouverrangers.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScheduleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.vancouverrangers.MainActivity" />
        </activity>
        <activity android:name=".ContactActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.vancouverrangers.MainActivity" />
        </activity>
        <activity android:name=".NewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.vancouverrangers.MainActivity" />
        </activity>
        <activity
            android:name=".Roster2Activity"
            android:label="@string/title_activity_roster2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RosterActivity"
            android:label="@string/title_activity_roster"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>